    <body>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">
                <img src="online.png" alt="" width="30" height="24" class="d-inline-block align-text-top">
                Online Clinic System
              </a>
            </div>
        </nav>
        <center><h1>Add Doctor</h1></center>
        <form action="/adddoctor" method="post">
            <div class="row">
                <div class="col-lg-4">
                    <label>Doctor's Name:</label>
                    <input name="name" type="text">
                </div>
                <div class="col-lg-4">
                    <labe>Specialization:</labe>
                    <input name="specialization" type="text">
                </div>
                <div class="col-lg-4">
                    <label>Date of Availability:</label>
                    <input name="date" type="date">
                </div>
            </div>
            
            <center><button style="margin-top: 2%;" class="btn btn-primary">Add</button></center>
        </form>
        <form action="/admindashboard" method="get">
            <center><button style="margin-top: 2%;" class="btn btn-primary">Go Back</button></center>
        </form>
    </body>
